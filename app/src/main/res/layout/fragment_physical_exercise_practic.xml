<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frm_phy"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/fragment_pep_gif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/gif_prueba"
        android:layout_centerInParent="true"
        android:layout_above="@id/physical_exercise_practic_conten_second"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/physical_exercise_practic_conten_second"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/five"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/text_view_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/fiftySp"
            android:text="00:00:00" />
    </LinearLayout>
</RelativeLayout>