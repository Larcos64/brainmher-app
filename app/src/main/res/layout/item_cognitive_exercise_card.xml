<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:id="@+id/cardCognitiveExcercise"
    style="@style/StyleCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    app:strokeColor="@color/colorPrimaryLight"
    app:strokeWidth="@dimen/two"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_cognitive_miniature"
                android:layout_width="@dimen/oneHundredFifty"
                android:layout_height="@dimen/oneHundredFifty"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/sixteen"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/data_cognitive_name"
                    style="@style/StyleCardViewTitles"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thirty"/>

                <TextView
                    style="@style/StyleCardViewSubTitles"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/twentyFive"
                    android:layout_marginTop="@dimen/two"
                    android:text="@string/lbl_description" />

                <TextView
                    android:id="@+id/data_cognitive_description"
                    style="@style/StyleCardViewDescriptions"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/twentyFive"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnCognitiveExpand"
                android:layout_width="@dimen/sixty"
                android:layout_height="@dimen/sixty"
                android:background="@drawable/ic_keyboard_arrow_down_black"
                android:backgroundTint="@color/colorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/expandableCognitiveView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sixteen"
            android:layout_marginRight="@dimen/sixteen"
            android:layout_marginBottom="@dimen/sixteen"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/twentyFive"
                android:layout_marginTop="@dimen/ten"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbl_cognitive_level"
                    style="@style/StyleCardViewSubTitles"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/lbl_level" />

                <TextView
                    android:id="@+id/data_cognitive_level"
                    style="@style/StyleCardViewDescriptions"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/twentyFive"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbl_cognitive_best_score"
                    style="@style/StyleCardViewSubTitles"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/lbl_best_score" />

                <TextView
                    android:id="@+id/data_cognitive_best_score"
                    style="@style/StyleCardViewDescriptions"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/twentyFive"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbl_cognitive_statement"
                    style="@style/StyleCardViewSubTitles"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/lbl_statement" />

                <TextView
                    android:id="@+id/data_cognitive_statement"
                    style="@style/StyleCardViewDescriptions"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            style="@style/StyleLayoutActionCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RatingBar
                android:id="@+id/cognitiveRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/StyleRatingBar"/>

            <TextView
                android:id="@+id/data_cognitive_rating"
                style="@style/StyleCardViewDescriptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>