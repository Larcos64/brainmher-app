<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_career"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".ui.carer.MainCarer">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbarCareer"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                style="@style/StyleToolbarPrimary"/>
        </com.google.android.material.appbar.AppBarLayout>

        <fragment
            android:id="@+id/content_carer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="androidx.navigation.fragment.NavHostFragment"
            app:defaultNavHost="true"
            app:navGraph="@navigation/carer_navigation"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"></fragment>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            style="@style/StyleBottonNavigation"
            android:id="@+id/navigation_carer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/menu_carer"
            android:layout_gravity="bottom"
            app:layout_behavior=".fragments.general.BottomNavigationBehavior"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view_career"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header_hp"
        app:menu="@menu/menu_navigation"
        app:itemIconTint="@color/colorPrimary"
        app:itemTextColor="#E6000000"/>

</androidx.drawerlayout.widget.DrawerLayout>