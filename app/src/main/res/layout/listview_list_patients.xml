<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    style="@style/StyleCardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/cv_list_patient"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:layout_gravity="center_vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imagePatient"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginVertical="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/avatar" />

        <TextView
            style="@style/StyleMiniCardViewTitles"
            android:id="@+id/tvPatientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imagePatient"
            android:layout_toLeftOf="@id/btn_delete"
            android:text="default"
            android:singleLine="true"
            android:maxLength="70"
            android:ellipsize="marquee"
            android:layout_marginTop="17dp"/>

        <TextView
            style="@style/StyleMiniCardViewSubTitles"
            android:id="@+id/tvPatientId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-1dp"
            android:layout_toRightOf="@id/imagePatient"
            android:layout_below="@+id/tvPatientName"
            android:text="default"
            />

        <ImageView
            android:id="@+id/btn_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="12dp"
            android:src="@drawable/ic_delete"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>




</com.google.android.material.card.MaterialCardView>